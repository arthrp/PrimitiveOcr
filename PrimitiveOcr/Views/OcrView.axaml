<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PrimitiveOcr.Views.OcrView">

	<DockPanel>
		<Button DockPanel.Dock="Bottom" Name="SettingsBtn" Command="{Binding $parent[Window].DataContext.OpenSettingsPage}">Settings</Button>
		<Button DockPanel.Dock="Bottom" Name="OpenImageBtn">Open image</Button>

		<TextBox Text="{Binding ImageText}" IsReadOnly="true" />
	</DockPanel>
	
</UserControl>
