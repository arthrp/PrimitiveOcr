<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PrimitiveOcr.Views.SettingsView">
	<DockPanel>
		<Button DockPanel.Dock="Bottom" Command="{Binding Cancel}">Cancel</Button>
		<Button DockPanel.Dock="Bottom" Command="{Binding Ok}">Ok</Button>
		
		<StackPanel Margin="10" DockPanel.Dock="Top">
			<TextBlock Text="Tesseract language file path" />
			<TextBox Watermark="Tess path" Text="{Binding TessCustomFilePath}" />
		</StackPanel>
	</DockPanel>
</UserControl>
